
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/main.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <title>User Status CRUD</title>
</head>
<body>
    <div class="container">
        <div class="row">
            <div id="pageHeader">
                <h1 id="pageTitle">User Status CRUD Application</h1>
            </div>
        </div>
        <div class="row" >
            <div class="col-md-5" id="theUsers">
                <div class="online templates"></div>
                <div class="offline templates"></div>
            </div>
            <div class="col-md-5 col-md-offset-2">
                <div id="theBox">
                    <div class="form-group">
                        <input type="text" class="form-control" id="idInput" readonly/>
                        <label id="unameLabel" for="unameInput">Username:</label>
                        <input id="unameInput" class="form-control" type="text" />
                        <br />
                        <label>Status:</label>
                        <div class="radio">
                            <label><input type="radio" name="optradio" />Online</label>
                        </div>
                        <div class="radio">
                            <label><input type="radio" name="optradio" />Offline</label>
                        </div>
                        <div>
                            <button id="submitButton" type="button" class="btn btn-info">Submit</button>
                            <button id="clearButton" type="button" class="btn btn-danger">Clear</button>
                        </div>
                    </div>
                </div>
            </div>
         </div>
    </div>
</body>

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/main.js"></script>
</html>
